<% if !flash[:notice].blank? %>
    <div class = "notice">
        <%= flash[:notice] %>
    </div>
<% end %>

<%= link_to("Back to Home Page", books_path , :class =>'back-link') %>

<div class = "book delete">
<h2>Delete a Book</h2>

    <%= form_for(@Book, :method => 'delete') do |f| %>

    <p>Do you want to permanently delete this Book from the collection?</p>

    <p class="reference-name"><%= f.object.title %></p>
  
    <div class = "form-buttons">
        <%= f.submit("Delete Book") %>
    </div>

    
    <% end %>

</div>